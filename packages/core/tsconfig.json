{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/react"],
      "*": ["src/*"],
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
